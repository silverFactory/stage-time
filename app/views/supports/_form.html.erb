<% if @support.errors.any? %>
<div class="form_box">
  <% @support.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
</div>
<% end %>
<div class="support_container">
  <div class="support_box">
  <%= form_with model: [:open_mic, support] do |f| %>
    <div>
    <p id="label"><%= f.label :title %></p>
    <p id="input"><%= f.text_field :title %></p>
    </div>
    <div>
    <p id="label"><%= f.label :body %></p>
    <p id="input"><%= f.text_area :body, size: "30x8" %></p>
    </div>
    <%= f.hidden_field :missed_connection, :value => missed_connection %>
    <%= f.hidden_field :lend_a_hand, :value => lend_a_hand %>
    <p><%= f.submit "Post" %></p>
  <% end %>
  </div>
</div>
