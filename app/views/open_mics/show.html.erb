  <img src="https://c.stocksy.com/a/IBQ200/z9/577300.jpg" alt="microphone on stand">
  <div class="lend_a_hands">
  <p><%= link_to "Help Me Out This Week:", "/open_mics/#{@open_mic.id}/lend_a_hands/new" %></p>
  <% @open_mic.supports.lend_a_hand.each do |hand| %>
  <p><%= link_to hand.title, open_mic_support_path(@open_mic, hand) %></p>
  <% end %>
  <p>more posts</p>
